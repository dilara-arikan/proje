<Application x:Class="RobotChatUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Dark Theme - Industrial Style -->
            <SolidColorBrush x:Key="WindowBackground" Color="#09090b"/>
            <SolidColorBrush x:Key="PanelBackground" Color="#18181b"/>
            <SolidColorBrush x:Key="BorderColor" Color="#27272a"/>
            <SolidColorBrush x:Key="ForegroundColor" Color="#e4e4e7"/>
            <SolidColorBrush x:Key="AccentColor" Color="#38bdf8"/>
            <SolidColorBrush x:Key="SuccessColor" Color="#a3e635"/>
            <SolidColorBrush x:Key="WarningColor" Color="#facc15"/>
            <SolidColorBrush x:Key="ErrorColor" Color="#ef4444"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
