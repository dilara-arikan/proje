<Window x:Class="RobotChatUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Robot Control & Chat Interface" Height="900" Width="1600"
        Background="#09090b" Foreground="#e4e4e7"
        WindowState="Maximized">
    <Grid ColumnDefinitions="*,*,*">
        <!-- Left Panel: Chat -->
        <Border Grid.Column="0" Background="#18181b" BorderBrush="#27272a" BorderThickness="1">
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Header -->
                <StackPanel Grid.Row="0" Padding="16" Background="#18181b" BorderBrush="#27272a" BorderThickness="0,0,0,1">
                    <TextBlock Text="ROBOT CHAT" FontSize="14" FontWeight="Bold" Foreground="#38bdf8" Margin="0,0,0,4"/>
                    <TextBlock Text="Real-time Communication" FontSize="11" Foreground="#94a3b8"/>
                </StackPanel>

                <!-- Chat Messages -->
                <ListBox Grid.Row="1" Background="#09090b" BorderThickness="0" Padding="8">
                    <ListBoxItem>
                        <StackPanel>
                            <TextBlock Text="[SYSTEM]" Foreground="#38bdf8" FontWeight="Bold" FontSize="10"/>
                            <TextBlock Text="Robot interface initialized" Foreground="#e4e4e7" FontSize="11" TextWrapping="Wrap"/>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>

                <!-- Input -->
                <Grid Grid.Row="2" Padding="8" Background="#18181b" RowDefinitions="*,Auto">
                    <TextBox Grid.Row="0" Background="#27272a" Foreground="#e4e4e7" 
                             BorderBrush="#38bdf8" BorderThickness="1" Padding="8" 
                             Text="Type message..." Margin="0,0,0,4"/>
                    <Button Grid.Row="1" Content="SEND" Background="#38bdf8" Foreground="#09090b" 
                            FontWeight="Bold" Padding="8" Cursor="Hand"/>
                </Grid>
            </Grid>
        </Border>

        <!-- Middle Panel: Map & QR Status -->
        <Border Grid.Column="1" Background="#18181b" BorderBrush="#27272a" BorderThickness="1" Margin="1,0">
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Header -->
                <StackPanel Grid.Row="0" Padding="16" Background="#18181b" BorderBrush="#27272a" BorderThickness="0,0,0,1">
                    <TextBlock Text="MAP & QR SCANNER" FontSize="14" FontWeight="Bold" Foreground="#60a5fa" Margin="0,0,0,4"/>
                    <TextBlock Text="SLAM + QR Detection" FontSize="11" Foreground="#94a3b8"/>
                </StackPanel>

                <!-- Map Canvas -->
                <Canvas Grid.Row="1" Background="#09090b" Margin="8">
                    <!-- Placeholder for map visualization -->
                    <Rectangle Width="200" Height="200" Fill="#27272a" Stroke="#38bdf8" StrokeThickness="2"/>
                    <TextBlock Canvas.Left="10" Canvas.Top="85" Text="Map Area" Foreground="#94a3b8" FontSize="12"/>
                </Canvas>

                <!-- QR Detection Status -->
                <Border Grid.Row="2" Background="#18181b" BorderBrush="#27272a" BorderThickness="1,1,0,0" Padding="8">
                    <StackPanel>
                        <TextBlock Text="Last QR Detected: -" Foreground="#e4e4e7" FontSize="11"/>
                        <TextBlock Text="Confidence: 0%" Foreground="#94a3b8" FontSize="10"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Right Panel: Control & Status -->
        <Border Grid.Column="2" Background="#18181b" BorderBrush="#27272a" BorderThickness="1" Margin="1,0,0,0">
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Header -->
                <StackPanel Grid.Row="0" Padding="16" Background="#18181b" BorderBrush="#27272a" BorderThickness="0,0,0,1">
                    <TextBlock Text="ROBOT STATUS & CONTROL" FontSize="14" FontWeight="Bold" Foreground="#a3e635" Margin="0,0,0,4"/>
                    <TextBlock Text="Telemetry & Commands" FontSize="11" Foreground="#94a3b8"/>
                </StackPanel>

                <!-- Control Panel -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="8">
                    <StackPanel Spacing="12">
                        <!-- Robot Status -->
                        <Border Background="#27272a" BorderBrush="#38bdf8" BorderThickness="1" Padding="8">
                            <StackPanel Spacing="4">
                                <TextBlock Text="STATUS" FontSize="11" FontWeight="Bold" Foreground="#38bdf8"/>
                                <TextBlock Text="State: IDLE" Foreground="#e4e4e7"/>
                                <TextBlock Text="Battery: 85%" Foreground="#a3e635"/>
                                <TextBlock Text="Position: X=0.0 Y=0.0" Foreground="#60a5fa"/>
                            </StackPanel>
                        </Border>

                        <!-- Mission Input -->
                        <Border Background="#27272a" BorderBrush="#facc15" BorderThickness="1" Padding="8">
                            <StackPanel Spacing="4">
                                <TextBlock Text="MISSION" FontSize="11" FontWeight="Bold" Foreground="#facc15"/>
                                <TextBlock Text="Type:" FontSize="10" Foreground="#94a3b8"/>
                                <ComboBox Background="#18181b" Foreground="#e4e4e7">
                                    <ComboBoxItem>PICKUP</ComboBoxItem>
                                    <ComboBoxItem>DROP</ComboBoxItem>
                                </ComboBox>
                                <TextBlock Text="QR Code:" FontSize="10" Foreground="#94a3b8" Margin="0,8,0,0"/>
                                <TextBox Background="#18181b" Foreground="#e4e4e7" 
                                         BorderBrush="#38bdf8" BorderThickness="1" Padding="4" 
                                         Text="Scan or enter QR"/>
                            </StackPanel>
                        </Border>

                        <!-- Quick Actions -->
                        <StackPanel Spacing="4">
                            <Button Content="START MISSION" Background="#a3e635" Foreground="#09090b" 
                                    FontWeight="Bold" Padding="8" Cursor="Hand"/>
                            <Button Content="EMERGENCY STOP" Background="#ef4444" Foreground="#ffffff" 
                                    FontWeight="Bold" Padding="8" Cursor="Hand"/>
                            <Button Content="REQUEST MAP" Background="#60a5fa" Foreground="#ffffff" 
                                    FontWeight="Bold" Padding="8" Cursor="Hand"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>

                <!-- Mission History -->
                <Border Grid.Row="2" Background="#18181b" BorderBrush="#27272a" BorderThickness="1,1,0,0" Padding="8">
                    <StackPanel>
                        <TextBlock Text="Recent Tasks" FontSize="10" FontWeight="Bold" Foreground="#94a3b8" Margin="0,0,0,4"/>
                        <TextBlock Text="No completed tasks" Foreground="#94a3b8" FontSize="9"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
